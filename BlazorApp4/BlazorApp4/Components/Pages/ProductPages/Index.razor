@page "/products"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject BlazorApp4.Data.ApplicationDbContext DB
@using BlazorApp4.Data

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="products/create">Create New</a>
</p>

<QuickGrid Class="table" Items="DB.Products">
    <PropertyColumn Property="product => product.ProductId" />
    <PropertyColumn Property="product => product.Name" />
    <PropertyColumn Property="product => product.Price" />
    <PropertyColumn Property="product => product.Category" />
    <PropertyColumn Property="product => product.StoreId" />
    <PropertyColumn Property="product => product.DiscountId" />

    <TemplateColumn Context="product">
        <a href="@($"products/edit?productid={product.ProductId}")">Edit</a> |
        <a href="@($"products/details?productid={product.ProductId}")">Details</a> |
        <a href="@($"products/delete?productid={product.ProductId}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
